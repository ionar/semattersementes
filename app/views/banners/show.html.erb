<div class="container">
	<div class="row">
	    <div class="col-lg-8 col-md-8 col-sm-8 col-xs-8">
	      <h2>Banner</h2>
	    </div>
	    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4">
	      <div class="text-right">
	        <h2>
	          <%= link_to banners_path, :class => 'btn btn-primary' do %>
	            <span class="glyphicon glyphicon-chevron-left"></span> Voltar
	          <% end %> 
	          <%= link_to edit_banner_path(@banner), :class => 'btn btn-success' do %>
	            <span class="glyphicon glyphicon-list-alt"></span> Editar
	          <% end %> 
	          <%= link_to banner_path(@banner), method: :delete, :class => 'btn btn-danger', data: { confirm: t('Are you sure?')  } do %>
	            <span class="glyphicon glyphicon-remove"></span> Apagar
	          <% end %> 
	        </h2>
	      </div>
	    </div>
	</div> <!-- /.row -->
	    <div class="panel panel-default">
	      <div class="panel-body">
	      <p>
	      	<%= image_tag @banner.image.url(:medium), class: "img-thumbnail" %>
	      </p>
	        <p>
	          <strong><%= t("link") %>:</strong>
	          <%= @banner.link %>
	        </p>
	        <p>
	          <strong><%= t("sequence") %>:</strong>
	          <%= @banner.sequence %>
	        </p>
	      </div><!-- /panel-body -->
	    </div><!-- /panel -->
</div><!-- /container -->
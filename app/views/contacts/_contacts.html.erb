  	<div class="col-md-4">
  	<h3>Mande uma mensagem para nós</h3>
	  <%= simple_form_for @contact do |f| %>
	    <%= f.input :name, :required => true, label: t('name') %>
	    <%= f.input :email, :required => true %>
	    <%= f.input :message, :as => :text, :required => true,  label: t('message') %>
	    <div class= "hidden">
	      <%= f.input :nickname, :hint => 'Leave this field blank!' %>
	    </div>
	    <div>
	      <br>
	      <%= f.button :submit, 'Enviar', :class=> "btn btn-primary" %>
	    </div>
	  <% end %>

<div class="container">
	<div class="row">
	    <div class="col-lg-8 col-md-8 col-sm-8 col-xs-8">
	      <h2><%= @cultivation.name %></h2>
	    </div>
	    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4">
	      <div class="text-right">
	        <h2>
	          <%= link_to cultivations_path, :class => 'btn btn-primary' do %>
	            <span class="glyphicon glyphicon-chevron-left"></span> Voltar
	          <% end %> 
	          <%= link_to edit_cultivation_path(@cultivation), :class => 'btn btn-success' do %>
	            <span class="glyphicon glyphicon-list-alt"></span> Editar
	          <% end %> 
	          <%= link_to cultivation_path(@cultivation), method: :delete, :class => 'btn btn-danger', data: { confirm: t('Are you sure?')  } do %>
	            <span class="glyphicon glyphicon-remove"></span> Apagar
	          <% end %> 
	        </h2>
	      </div>
	    </div>
	</div> <!-- /.row -->
	    <div class="panel panel-default">
	      <div class="panel-body">
	        <p>
	          <strong><%= t("name") %>:</strong>
	          <%= @cultivation.name %>
	        </p>
	        <p>
	          <strong><%= t("description") %>:</strong>
	          <%= @cultivation.description %>
	        </p>
	      </div><!-- /panel-body -->
	    </div><!-- /panel -->
</div><!-- /container -->
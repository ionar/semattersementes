<p id="notice"><%= notice %></p>

<h1>Cultivations</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cultivations.each do |cultivation| %>
      <tr>
        <td><%= cultivation.name %></td>
        <td><%= cultivation.description %></td>
        <td><%= link_to 'Show', cultivation %></td>
        <td><%= link_to 'Edit', edit_cultivation_path(cultivation) %></td>
        <td><%= link_to 'Destroy', cultivation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Cultivation', new_cultivation_path %>

<!-- Carousel -->
    <!-- Full Page Image Background Carousel Header -->
    <header id="myCarousel" class="carousel slide">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>

        <!-- Wrapper for Slides -->
        <div class="carousel-inner">
            <div class="item active">
                <!-- Set the first background image using inline CSS below. -->
                <div class="fill" style="background-image:url('banners/banners-01.png');"></div>
                <div class="carousel-caption">
                    <h2>Caption 1</h2>
                </div>
            </div>
            <div class="item">
                <!-- Set the second background image using inline CSS below. -->
                <div class="fill" style="background-image:url('http://placehold.it/1900x1080&text=Slide Two');"></div>
                <div class="carousel-caption">
                    <h2>Caption 2</h2>
                </div>
            </div>
            <div class="item">
                <!-- Set the third background image using inline CSS below. -->
                <div class="fill" style="background-image:url('http://placehold.it/1900x1080&text=Slide Three');"></div>
                <div class="carousel-caption">
                    <h2>Caption 3</h2>
                </div>
            </div>
        </div>

        <!-- Controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
        </a>
    </header>
<!-- /Carousel -->
<div id="qual">
    <div class="container">
        <h2 class="text-center">QUAL É O RAIX INDICADO PARA O MEU USO?</h2>
    <div class="row">
      <div class="col-sm-6 col-sm-offset-4">
            <%= form_tag(products_path, :class => 'navbar-form navbar-left form-inline', :role => 'search', :method => :get) do %>
              <div class="form-group">
                <select name="cultivation" class="form-control">
                  <option value="">Cultivo</option>
                  <% Cultivation.all.collect do |p| %>
                  <option value="<%= p.id %>"><%= p.name %></option>
                  <% end %>
                </select>
              </div>
              <div class="form-group">
                <select name="cycle" class="form-control">
                  <option value="">Ciclo</option>
                  <% Cycle.all.collect do |p| %>
                  <option value="<%= p.id %>"><%= p.name %></option>
                  <% end %>
                </select>
              </div>
              <div class="text-center" style="padding-top: 20px">
              <%= button_tag(type: "submit", class: "btn btn-default") do %>
                <span class="glyphicon glyphicon-zoom-in"></span> SOLUÇÃO
              <% end %>
              </div><!-- /text-center -->
            <% end %>
        </div><!-- /col -->
    </div><!-- /row -->
    </div><!-- /container -->
</div><!-- /qual -->


    <!-- Script to Activate the Carousel -->
    <script>
    $('.carousel').carousel({
        interval: 3000 //changes the speed
    })
    </script>
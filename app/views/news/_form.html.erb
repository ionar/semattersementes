<%= simple_form_for(@news) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title, label: t('title') %>
    <%= f.input :abstract, label: t('abstract') %>
    <%= f.input :description, label: t('description'), as: :wysihtml5, wysihtml5: { locale: "pt-BR" } %>
  </div>

    <div class="actions text-right">
      <%= link_to 'Cancelar', :back, :class => 'btn btn-default' %>
      <%= button_tag(type: 'submit', class: "btn btn-primary") do %>
      <span class="glyphicon glyphicon-floppy-disk"></span> Salvar
    <% end %>
    </div>
<% end %>

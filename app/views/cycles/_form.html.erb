<%= simple_form_for(@cycle) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, :label => t('name') %>
    <%= f.input :description, :label => t('description') %>
    <%= f.input :period_initial, :label => t('Inicio'), hint: "início do período em dias, apenas o numero" %>
    <%= f.input :period_final, :label => t('Fim'), hint: "final do período em dias, apenas o numero" %>
  </div>

    <div class="actions text-right">
  		<%= link_to 'Cancelar', :back, :class => 'btn btn-default' %>
	  <%= button_tag(type: 'submit', class: "btn btn-primary") do %>
	    <span class="glyphicon glyphicon-floppy-disk"></span> Salvar
	  <% end %>
    </div>
<% end %>
<hr>

<% @page_title = "Produtos - Sematter Sementes" %>
<% @content_title = "Produtos" %>

<div class="container">
<ol class="breadcrumb">
  <li><%= link_to 'Inical', root_path %></li>
  <li class="active">Produtos</li>
</ol>
  <div class="row">
    <div class="col-lg-12">
      <div class="text-right">
      <% if user_signed_in? and current_user.admin == true %>
        <h2>
          <%= link_to new_product_path, :class => 'btn btn-primary' do %>
            <span class="glyphicon glyphicon-plus"></span> Adicionar
          <% end %>
        </h2>
        <% end %>
      </div>
    </div>
  </div> <!-- /.row -->
<div class="row">
<% @cycles.each do |cycle| %>
 <div class="col-lg-4 col-md-4">
 <div class="panel panel-default">
      <!-- Default panel contents -->
      <div class="panel-heading"><span class="texto-verde">Ciclo <%= cycle.name %></span></div>
      <!-- List group -->
      <ul class="list-group">
        <% cycle.products.each do |product| %>
        <li class="list-group-item"><%= link_to product.name, product %></li>
      <% end %>
      </ul>
    </div><!-- /panel -->
  </div><!-- /.col -->
<% end %>
</div><!-- /.row -->

</div><!-- /.container -->
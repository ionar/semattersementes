<%= simple_form_for(@product) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.association :cultivation %>
    <%= f.association :cycle %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

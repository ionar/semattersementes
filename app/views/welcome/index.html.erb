<!-- Carousel -->
    <!-- Full Page Image Background Carousel Header -->
        <header id="myCarousel" class="carousel slide">
        <!-- Indicators -->
        <ol class="carousel-indicators">
        <% @banners.each_with_index do |banner, index| %>
            <%=
            if index == 0
                render inline: "<li data-target='#myCarousel' data-slide-to='#{index}' class='active'></li>"
            else
                render inline: "<li data-target='#myCarousel' data-slide-to='#{index}'></li>"
            end %>
        <% end %>
        </ol>

        <!-- Wrapper for Slides -->
        <div class="carousel-inner">
        <% btn = image_path('bt-saiba-mais.png') %>
           <% @banners.each_with_index do |banner, index| %>
            <%=          
                if index == 0
                    render inline: "
                                    <div class='item active'>
                                    <!-- Set the first background image using inline CSS below. -->
                                        <div class='fill' style=\"background-image:url('#{banner.image.url(:original)}');\"></div>
                                        <div class='carousel-caption'>
                                            <h2><a href='#{banner.link}'><img src='#{btn}' class='img-responsive center-block bt-saiba-mais'></a></h2>
                                        </div>
                                    </div>
                    "
                else
                    render inline: "
                                    <div class='item'>
                                    <!-- Set the second background image using inline CSS below. -->
                                        <div class='fill' style=\"background-image:url('#{banner.image.url(:original)}');\"></div>
                                        <div class='carousel-caption'>
                                            <h2><a href='#{banner.link}'><img src='#{btn}' class='img-responsive center-block bt-saiba-mais'></a></h2>
                                        </div>
                                    </div>
                    "
                end %>
            <% end %>
        </div>

        <!-- Controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
        </a>
    </header>
<!-- /Carousel -->

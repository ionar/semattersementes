<!DOCTYPE html>
<html lang="pt-br">
<head>
  <title><%= @title || "Sematter Sementes" %></title>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="description" content="Sematter Sementes">
  <meta name="author" content="@michielin">
  <%= csrf_meta_tags %>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  <%= render 'application/favicon' %>
</head>
<body>
<!-- Flash messages -->
<% flash.each do |type, message| %>
  <div class="auto-close-alert alert <%= bootstrap_class_for(type) %> alert-dismissible fade in" role="alert" id="flash-message-wrapper">
    <div class="container">
    	<button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    	<span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span> <%= message %>
    </div><!-- /container -->
  </div>
<% end %><!-- /flash messages -->

<div id="cab">
	<div class="container">
		<div class="logo-principal">
			<%= link_to root_path do %>
		    	<%= image_tag "sematter-logo-195x55.png", alt: "Sematter Sementes" %>
		    <% end %>
		</div>
	</div>
</div>
<nav class="navbar navbar-default">
	<div class="container">
		<!-- Brand and toggle get grouped for better mobile display -->
		<div class="navbar-header">
			<button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#menu">
			<span class="sr-only">Toggle navigation</span>
			<span class="icon-bar"></span>
			<span class="icon-bar"></span>
			<span class="icon-bar"></span>
			</button>
		    <%= link_to root_path, :class => 'navbar-brand' do %>
		    	<span class="glyphicon glyphicon-home" aria-hidden="true"></span>
		    <% end %>
		</div>
		<!-- Collect the nav links, forms, and other content for toggling -->
		<div class="collapse navbar-collapse navbar-right" id="menu">
			<ul class="nav navbar-nav">
				<li class="<%= static_active?('adubacao-verde') %>"><%= link_to 'ADUBAÇÃO VERDE', page_path('adubacao-verde') %></li>
				<li class="<%= static_active?('revenda') %>"><%= link_to "ONDE COMPRAR", page_path('revenda') %></li>
				<li class="<%= static_active?('noticias') %>"><%= link_to "NOTÍCIAS", page_path('noticias') %></li>
				<li class="<%= active?('purposes')%>"><%= link_to "Objetivos", purposes_path %></li>
				<li class="<%= active?('products')%>"><%= link_to "Produtos", products_path %></li>
				<li class="<%= active?('products_purposes_relations')%>"><%= link_to "Estrelas", products_purposes_relations_path %></li>
				<li class="dropdown">
		          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">ADMIN <span class="caret"></span></a>
		          <ul class="dropdown-menu">
		          <li class="<%= active?('banners')%>"><%= link_to "Banners", banners_path %></li>
		          <li class="<%= active?('cultivations')%>"><%= link_to "Cultivos", cultivations_path %></li>
				<li class="<%= active?('cycles')%>"><%= link_to "Ciclos", cycles_path %></li>
				<li class="<%= active?('purposes')%>"><%= link_to "Objetivos", purposes_path %></li>
				<li class="<%= active?('products')%>"><%= link_to "Produtos", products_path %></li>
				<li class="<%= active?('products_purposes_relations')%>"><%= link_to "Estrelas", products_purposes_relations_path %></li>
		          </ul>
		        </li>	
			</ul>
		</div><!-- /.navbar-collapse -->
	</div><!-- /.container -->
</nav>			

<%= yield %>

<!-- Footer -->
<footer>
  <div class="container">
  	<section class="rodape">
              <div class="row">
                  <div class="col-lg-2 col-md-2 col-sm-2 col-xs-12">
                    
                      <%= link_to root_path do %>
                          <%= image_tag 'logo-raix.png', :alt => 'Sematter', :class => 'img-responsive center-block' %>
                        <% end %>
                        <br>

                  </div>
                  <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">

                       <span class="texto-verde">Sematter Sementes</span> <br />
                        Rua Arno Erich Schwambach, 990  <br />
                        Bairro Industrial, CEP: 89900-000 <br />
                        São Miguel do Oeste - SC <br />
                        Fone: (49)3622-8263 <br />
                        comercial@semattersementes.com.br<br />

                  </div>
                  <div class="col-lg-2 col-md-2 col-sm-2 col-xs-12">

                       <span class="texto-verde">Acesso rápido</span> <br />
                      <%= link_to 'Inicial', root_path  %><br>
                      <%= link_to 'Empresa', page_path('empresa') %> <br>  
                      <%= link_to 'Produtos', products_path %> <br>
                      <%= link_to 'Serviços', page_path('servicos') %> <br>
                      <% # link_to 'Contato', contact_path %>

                  </div>                  
                  <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">

	                    <span class="texto-verde">Acesso restrito</span>
	                    <br>
	                      <% if user_signed_in? %>
	                        <%= link_to edit_user_registration_path do %><span class="glyphicon glyphicon-user"></span> <%= current_user.email %><% end %>
	                        <br>
	                        <%= link_to destroy_user_session_path, method: :delete do %><span class="glyphicon glyphicon-log-out"></span> Sair <% end %>
	                         <br>
	                      <% else %>
	                        <%= link_to new_user_registration_path do %><span class="glyphicon glyphicon-user"></span> Cadastrar-se<% end %>
	                        <br>
	                        <%= link_to new_user_session_path do %><span class="glyphicon glyphicon-log-in"></span> Login <% end %>
	                        <br>
	                      <% end %>
	                      <%= link_to 'https://mail.zoho.com/' do %>
	                      <span class="glyphicon glyphicon-envelope"></span> Webmail
	                      <% end %>

                  </div>
              </div><!-- /.row -->
              <hr>
              <div class="row" style="padding-bottom: 50px; padding-top: 30px">
              	<div class="col-md-8">
              	<span class="glyphicon glyphicon-copyright-mark"></span> 2017 SEMATTER SEMENTES- Todos os direitos reservados
              	</div>
              	<div class="col-md-4">
					<%= link_to "http://www.ionar.com.br", target: '_blank' do %>
	              		<%= image_tag 'logo_ionar.png', :alt => 'Ionar', :class => 'pull-right img-responsive' %>
	            	<% end %>
              	</div>
              </div><!-- /.row -->
    </section><!-- /.rodape -->
  </div><!-- /.container -->
</footer>
</body>
</html>

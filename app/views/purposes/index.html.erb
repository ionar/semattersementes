<div class="container">
<ol class="breadcrumb">
  <li><%= link_to 'Inicial', root_path %></li>
  <li class="active">Objetivos</li>
</ol>
  <div class="row">
    <div class="col-lg-8 col-md-8 col-sm-8 col-xs-8">
      <h2><%= t("purposes") %></h2>
    </div>
    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4">
      <div class="text-right">
        <h2>
          <%= link_to new_purpose_path, :class => 'btn btn-primary' do %>
            <span class="glyphicon glyphicon-plus"></span> Adicionar
          <% end %>
        </h2>
      </div>
    </div>
  </div> <!-- /.row -->
  <table class="table table-striped">
    <thead>
      <tr>
        <th><%= t('name') %></th>
      </tr>
    </thead>

    <tbody>
      <% @purposes.each do |purpose| %>
        <tr>
          <td><%= link_to purpose.name, purpose %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div><!-- /.container -->
<div class="container">
	<div class="row">
	    <div class="col-lg-8 col-md-8 col-sm-8 col-xs-8">
	      <h2><%= @products_purposes_relation.product.name %> <=> <%= @products_purposes_relation.purpose.name %></h2>
	    </div>
	    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4">
	      <div class="text-right">
	        <h2>
	          <%= link_to products_purposes_relations_path, :class => 'btn btn-primary' do %>
	            <span class="glyphicon glyphicon-chevron-left"></span> Voltar
	          <% end %> 
	          <%= link_to edit_products_purposes_relation_path(@products_purposes_relation), :class => 'btn btn-success' do %>
	            <span class="glyphicon glyphicon-list-alt"></span> Editar
	          <% end %> 
	          <%= link_to products_purposes_relation_path(@products_purposes_relation), method: :delete, :class => 'btn btn-danger', data: { confirm: t('Are you sure?')  } do %>
	            <span class="glyphicon glyphicon-remove"></span> Apagar
	          <% end %> 
	        </h2>
	      </div>
	    </div>
	</div> <!-- /.row -->
	    <div class="panel panel-default">
	      <div class="panel-body">
	        <p>
	          <strong><%= t("product") %>:</strong>
	          <%= @products_purposes_relation.product.name %>
	        </p>
	        <p>
	          <strong><%= t("purpose") %>:</strong>
	          <%= @products_purposes_relation.purpose.name %>
	        </p>
	        <p>
	          <strong><%= t("stars") %>:</strong>
	          <%= @products_purposes_relation.stars %>
	        </p>	        
	      </div><!-- /panel-body -->
	    </div><!-- /panel -->
</div><!-- /container -->

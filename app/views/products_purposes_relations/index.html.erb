<div class="container">
  <div class="row">
    <div class="col-lg-8 col-md-8 col-sm-8 col-xs-8">
      <h2><%= t("products_purposes_relation") %></h2>
    </div>
    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4">
      <div class="text-right">
        <h2>
          <%= link_to new_products_purposes_relation_path, :class => 'btn btn-primary' do %>
            <span class="glyphicon glyphicon-plus"></span> Adicionar
          <% end %>
        </h2>
      </div>
    </div>
  </div> <!-- /.row -->
  <table class="table table-striped">
    <thead>
      <tr>
        <th><%= t('relationship') %></th>
        <th><%= t('stars') %></th>
        <th><%= t('comando') %></th>
      </tr>
    </thead>

    <tbody>
      <% @products_purposes_relations.each do |products_purposes_relation| %>
        <tr>
          <td><%= link_to products_purposes_relation.product, products_purposes_relation %> :: <%= link_to products_purposes_relation.purpose, products_purposes_relation %></td>
          <td><%= products_purposes_relation.stars %></td>
          <td><%= link_to 'Delete', products_purposes_relation, method: :delete, data: { confirm: t('Are you sure?')  }  %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div><!-- /.container -->